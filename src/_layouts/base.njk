<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description or 'Electric Bassist & Composer from Grand Pré, Nova Scotia. Specializing in jazz, contemporary classical, and electronic music.' }}">
    <meta name="author" content="Orion Leidl Wilson">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ page.url | absoluteUrl(site.url) }}">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description or 'Electric Bassist & Composer from Grand Pré, Nova Scotia. Specializing in jazz, contemporary classical, and electronic music.' }}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary">
    <meta property="twitter:url" content="{{ page.url | absoluteUrl(site.url) }}">
    <meta property="twitter:title" content="{{ title }}">
    <meta property="twitter:description" content="{{ description or 'Electric Bassist & Composer from Grand Pré, Nova Scotia. Specializing in jazz, contemporary classical, and electronic music.' }}">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">



    <!-- Stylesheets -->
    <link rel="stylesheet" href="/bundle.css">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{ page.url | absoluteUrl(site.url) }}">

    <!-- Theme color -->
    <meta name="theme-color" content="#1a472a">
  </head>
  <body>
    <nav class="main-nav">
      {{ collections.all | eleventyNavigation | eleventyNavigationToHtml({
        markActiveItem: true
      }) | safe }}
    </nav>
    <main>
      {{ content | safe }}
    </main>
    <footer class="site-footer">
      <div class="footer-links">
        <a href="/media/">Media</a>
        <a href="/cv/">CV</a>
        <a href="/feed.xml">RSS</a>
      </div>
      <p class="footer-text">© {% year %} {{ site.author.name }}</p>
    </footer>
  </body>
</html>
