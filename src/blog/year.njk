---
pagination:
  data: collections.postsByYearMonth
  size: 1
  alias: yearData
  addAllPagesToCollections: true
permalink: "/blog/{{ year }}/index.html"
eleventyComputed:
  year: "{{ pagination.items[0][0] }}"
  posts: "{{ pagination.items[0][1] | values | flatten }}"
---

<main class="container">
  <h1>Blog: {{ year }}</h1>
  <nav>
    <a href="/blog/">All</a>
    <a href="/blog/{{ year }}/">{{ year }}</a>
    {% set months = posts | map(attribute='date') | map('getMonth') | unique |
    sort(true) %} {% for month in months %}
    <a href="/blog/{{ year }}/{{ month + 1 }}/">
      {{ "Jan Feb Mar Apr May Jun Jul Aug Sep Oct Nov Dec".split(" ")[month] }}
    </a>
    {% endfor %}
  </nav>
  {% for post in posts | reverse %}
  <!-- post markup here -->
  {% endfor %}
</main>
