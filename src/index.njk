<h2>Blog</h2>
{% for post in collections.post | reverse | slice(0, 3) %}
<article class="blog-preview" style="margin-bottom: 2em">
  {% if post.data.image %}
  <a href="{{ post.url }}">
    <img
      src="{{ post.data.image }}"
      alt="{{ post.data.title }}"
      style="
        max-width: 100%;
        height: auto;
        display: block;
        margin-bottom: 0.5em;
      "
    />
  </a>
  {% endif %}
  <h3 style="margin-bottom: 0.2em">
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </h3>
  <div
    style="color: var(--fg-med-light); font-size: 0.95em; margin-bottom: 0.5em"
  >
    {{ post.date | date("yyyy-MM-dd") }}
  </div>
  <div>
    {% if post.data.description %}
    {{ post.data.description }}
    {% else %}
    {{ post.templateContent | striptags | truncate(200, true, "…") }}
    {% endif %}
  </div>
</article>
{% endfor %}
